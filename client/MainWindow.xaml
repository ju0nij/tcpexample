<Window x:Class="client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:client"
        mc:Ignorable="d"
        Title="ConnectClient" Height="450" Width="800" Closing="Window_Closing">
    <Grid KeyDown="Grid_KeyDown">
        <TextBox x:Name="ipaddr" HorizontalAlignment="Left" Margin="32,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="659" Height="24"/>
        <Button x:Name="Connect" Content="연결" HorizontalAlignment="Left" Margin="696,34,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.206,-0.339" Width="64" Height="24" Click="Connect_Click"/>
        <TextBox x:Name="log" HorizontalAlignment="Left" Height="268" Margin="32,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="659" Focusable="False" />
        <TextBox x:Name="content" HorizontalAlignment="Left" Margin="32,336,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="659" Height="29"/>
        <Button x:Name="Send" Content="전송" HorizontalAlignment="Left" Margin="696,336,0,0" VerticalAlignment="Top" Width="64" Height="29" Click="Send_Click" IsEnabled="False"/>

    </Grid>
</Window>
